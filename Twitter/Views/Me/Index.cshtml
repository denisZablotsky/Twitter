@model Twitter.Models.User
<div class="avatar">
    @{
        Html.RenderAction("Ava", "Home", Model);
    }
</div>
<div class="info">
    <h2>@Model.Name</h2>
    <p>@Model.Profile.Email</p>
    <p>@Model.Profile.Age</p>
    <p>@Model.Profile.SignupData</p>
    @using (Html.BeginForm("Timeline", "Me", FormMethod.Get))
    {
        <input type="submit" value="Timeline" />
    }
</div>
    
    @{
        Html.RenderAction("CreateTweet", "User", new { id = Model.Id });
    }
    @{
        Html.RenderPartial("_tweetList", Model.Tweets);
    }
