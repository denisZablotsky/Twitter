@model Twitter.Models.User

<p>Followers:</p>
@if (!Model.Followers.Any())
{
    <p>No Followers.</p>
}
else
{
    foreach(Twitter.Models.User user in Model.Followers)
    {
        <p>
            @Html.ActionLink(user.Name, "Index", "User", new { id = user.Id}, null)
        </p>
    }
}
<br />
<p>Followings:</p>
@if (!Model.Followings.Any())
{
    <p>No Followings.</p>
}
else
{
    foreach (Twitter.Models.User user in Model.Followings)
    {
        <p>
            @Html.ActionLink(user.Name, "Index", "User", new { id = user.Id }, null)
        </p>
    }
}